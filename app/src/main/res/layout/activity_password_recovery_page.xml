<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- לוגו מוגדל -->
        <ImageView
            android:id="@+id/logoImage"
            android:src="@drawable/login_logo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="48dp"
            android:contentDescription="לוגו" />

        <!-- כותרת -->
        <TextView
            android:id="@+id/titleText"
            android:text="שחזור סיסמה"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- שלב 1 - אימייל -->
        <LinearLayout
            android:id="@+id/stepEmail"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/emailInput"
                android:background="@drawable/singup_email"
                android:padding="12dp"
                android:textDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/sendCodeBtn"
                android:src="@drawable/send_code_continue_writing"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="24dp"
                android:layout_width="220dp"
                android:layout_height="60dp" />
        </LinearLayout>

        <!-- שלב 2 - קוד -->
        <LinearLayout
            android:id="@+id/stepCode"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/codeInput"
                android:hint="הזן קוד אימות"
                android:background="@drawable/enter_code_continue_writing"
                android:padding="12dp"
                android:textDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/verifyCodeBtn"
                android:src="@drawable/password_verificationpassword_verification"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="24dp"
                android:layout_width="220dp"
                android:layout_height="60dp" />
        </LinearLayout>

        <!-- שלב 3 - סיסמה חדשה -->
        <LinearLayout
            android:id="@+id/stepPassword"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/newPassword"
                android:hint="סיסמה חדשה"
                android:inputType="textPassword"
                android:background="@drawable/new_password_password_verification"
                android:padding="12dp"
                android:textDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/confirmPassword"
                android:hint="אימות סיסמה"
                android:inputType="textPassword"
                android:background="@drawable/validation_password_passwordverification"
                android:padding="12dp"
                android:textDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <ImageButton
                android:id="@+id/savePasswordBtn"
                android:src="@drawable/save_new_password_password_verification"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="24dp"
                android:layout_width="220dp"
                android:layout_height="60dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
